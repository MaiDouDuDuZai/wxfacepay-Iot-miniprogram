page { background-color: #fff; }

.keyboard-style{ position: absolute; bottom: 0; width: 100%;}
.keyboard-style .totalAmount{
  position: relative;
  width:100%; height:400rpx; 
  background: #ffffff;
}
.keyboard-style .totalAmount text:before{ content:'￥'; font-size: 28px; margin-right:5px;}
.keyboard-style .totalAmount text{ 
  text-align: right;  
  line-height: 1; 
  font-size: 48px; 
  position: absolute; bottom: 20px; right: 20px;
}
.keyboard-style .keyboard button{ 
  border-radius: 0!important; border:none!important; 
  height: 150rpx; line-height: 150rpx; font-size:30px; color:#333;
}
.keyboard-style .keyboard button::after{ border-radius: 0!important; border:none!important;}
.keyboard-style .keyboard button icon{ font-size:30px;}
.keyboard-style .keyboard button[data-biz_type]{ height: 197rpx; font-size:16px; line-height: 40px; background: #f8f8f8;}
.keyboard-style .keyboard button[data-biz_type] icon{ 
  font-size: 28px; color:#fff; display: block; background: #1aad19; margin: 15px auto 0;
  width:60px; height: 60px; line-height: 60px; border-radius: 50%;}


.simple-style text.amount{ 
  display: block; padding:120px 0 0; position: relative;
  font-size: 45px; text-align: center; text-indent:-10px;
}
.simple-style text.amount::after{
  content: '付款金额'; display: block; 
  font-size: 15px; color: #888; text-indent: 0; font-weight: normal;
  position: absolute; left: 50%; margin-left: -2em; top: 95px;
}
.simple-style text.amount::before{
  content: '￥'; font-size: 20px; font-weight: normal; padding-right: 5px; color: #888
}
.simple-style .buttons{ position: absolute; width: 100%; bottom: 70rpx; }
.simple-style .buttons button{ width:80%; margin:10px auto 0; padding: 12px 24px;}
