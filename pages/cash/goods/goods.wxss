page{background:#fafafa;}
.sidebar{ width:100%!important; text-align: center;}
.van-card{ background:#fff!important;}

.card-button{ font-size:23px; vertical-align: middle; color:#ee0a24;}
.card-num{ display: inline-block; line-height: 27px; font-size:16px; padding: 0 .5em; vertical-align: middle;}

.van-card__title{ height: 30rpx; overflow: hidden;}
.van-card__desc{ height: 4.5em; line-height: 1.5em!important; overflow: hidden;}
.goods-cat{ height:1008rpx; background:#fff;}
.goods-list{ margin-bottom: 50px;}
.goods-list van-card{ width: 49%; display: block; float: left; height: 8.5em; overflow: hidden;}
.goods-list van-card:nth-child(odd){ clear: left;}

