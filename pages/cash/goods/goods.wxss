.cart{ position: fixed; width:100%; height: 100%; top:0;}
.cart .mask{ width: 100%; height: 100%; background:rgba(0,0,0,.5);}
.cart .list{ 
  position: absolute; 
  bottom:50px; 
  width:100%;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  padding: 15px 0;
  background: #fff;
  border-top: 15px solid #ee0a24;}
  .cart-button{ color:#ee0a24;margin-left:20px;}
  .cart-button.disabled{ color:grey;}

  .payOption{display: flex;align-items: center;justify-content: center;height: 100%;}
  .payOption > view{background-color: #fff; padding:20px 30px; border-radius:15px;}
  .payOption button{font-size: 22px;padding:0 1em;letter-spacing: 5px;}
  .payOption button icon{ margin-right:.5em; font-size: 22px;}

  .sku-pick-btn{ padding:0px 1em; font-size:12px; line-height:22px!important; border-radius:12px; height:24px; background: #ee0a24; color: #fff;}

  .sku-panel-wrapper{display: flex;align-items: center;justify-content: center;height: 100%;}
  .sku-panel-wrapper > view{ background: #fff; padding: 20px; min-width: 50%;}
  .sku-panel-wrapper .header{ font-size: larger; font-weight: bold; padding-bottom: 10px;}
  .sku-panel-wrapper .footer{ padding-top: 20px; border-top: 1px solid #ccc; margin-top: 15px;}

  .cart-num-badge{ position: absolute; right: 15px; bottom:25px; border-radius: 50%; border: 1px solid #fff; background: #ee0a24; min-width: 18px; color: #fff; text-align: center; }